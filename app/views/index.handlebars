<h1>Burgers!</h1>

<h2>Burgers that are ready</h2>

<ul>
	{{#each burgers}}
	  {{#unless devoured}}
	    {{> devoured=true}}
	  {{/unless}}
	{{/each}}
</ul>

<ul>
	{{#each burgers}}
	  {{#if devoured}}
	    {{>devoured=false}}
	  {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name</laber>
    <input type="text" id="ca" name="name">
 </div>

 <div class="form-group">
 	<label for="devoured">Devoured?</label><br>
 	<input type="radio" name="devoured" value="1" checked> Hungy?<br>
 	<input type="radio" name="devoured" value="0">Hungry
 </div>

 <button type="submit">Add Burger</button>
</form>